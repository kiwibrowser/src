{
  "name": "Localize CSS scripts",
  "description": "Checks that messages in CSS content scripts get localized.",
  "version": "0.1",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"]
  },
  "default_locale": "en",
  "content_scripts": [
    {
      "matches": ["http://*/*", "file://*/*"],
      "css": ["style.css"]
    }
  ],
  "permissions": [
    "tabs", "http://*/*", "file://*/*"
  ]
}


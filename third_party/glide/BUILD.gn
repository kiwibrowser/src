import("//build/config/android/rules.gni")

android_aar_prebuilt("com_github_bumptech_glide_glide_java") {
  aar_path = "glide-4.9.0.aar"
  deps = [
    "//third_party/android_deps:android_support_v7_appcompat_java",
    ":com_github_bumptech_glide_annotations_java",
    ":com_github_bumptech_glide_disklrucache_java",
    ":com_github_bumptech_glide_gifdecoder_java",
  ]
}

java_prebuilt("com_github_bumptech_glide_annotations_java") {
  jar_path = "annotations-4.9.0.jar"
  supports_android = true
  visibility = [ ":*" ]
}

java_prebuilt("com_github_bumptech_glide_disklrucache_java") {
  jar_path = "disklrucache-4.9.0.jar"
  supports_android = true
  visibility = [ ":*" ]
}

android_aar_prebuilt("com_github_bumptech_glide_gifdecoder_java") {
  aar_path = "gifdecoder-4.9.0.aar"
  visibility = [ ":*" ]

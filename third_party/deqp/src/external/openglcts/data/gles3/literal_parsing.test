case int_wrap_1
	version 300 es
	values { output int out0 = -2147483648; }
	vertex ""
		#version 300 es
		${VERTEX_DECLARATIONS}
		void main()
		{
			${VERTEX_OUTPUT}
		}
	""
	fragment ""
		#version 300 es
		precision mediump float;
		${FRAGMENT_DECLARATIONS}
		void main()
		{
			out0 = 0x80000000;
			${FRAGMENT_OUTPUT}
		}
	""
end

